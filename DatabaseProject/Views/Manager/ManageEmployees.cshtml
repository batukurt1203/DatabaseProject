@model List<DatabaseProject.Models.EmployeeViewModel>

@{
    ViewData["Title"] = "Employee Management";
    Layout = "_managerNavBar";
}

<div class="container mt-4">
    <h2 class="mb-4">Employee Management</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    <!-- Employee Listesi -->
    <div class="card">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="fas fa-users"></i> Employee List</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Transactions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in Model)
                            {
                                <tr>
                                    <td>@employee.PersonID</td>
                                    <td>@employee.FullName</td>
                                    <td>@employee.Email</td>
                                    <td>
                                        <form asp-action="DeleteEmployee" method="post" style="display:inline;"
                                              onsubmit="return confirm('Are you sure that you want to delete this employee?');">
                                            <input type="hidden" name="personId" value="@employee.PersonID" />
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i> Sil
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <i class="fas fa-info-circle"></i>  There is no employee record yet.
                </div>
            }
        </div>
    </div>
</div>