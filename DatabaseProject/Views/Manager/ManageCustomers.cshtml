@model List<DatabaseProject.Models.CustomerViewModel>

@{
    ViewData["Title"] = "Customer Management";
    Layout = "_managerNavBar";
}

<div class="container mt-4">
    <h2 class="mb-4">Customer Management</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    <!-- Customer Listesi -->
    <div class="card">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0"><i class="fas fa-users"></i> Customer List</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Transactions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var customer in Model)
                            {
                                <tr>
                                    <td>@customer.PersonID</td>
                                    <td>@customer.FullName</td>
                                    <td>@customer.Email</td>
                                    <td>
                                        <form asp-action="DeleteCustomer" method="post" style="display:inline;"
                                              onsubmit="return confirm('Are you sure that you want to delete this customer?');">
                                            <input type="hidden" name="personId" value="@customer.PersonID" />
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i> Sil
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <i class="fas fa-info-circle"></i> There is no customer record yet.
                </div>
            }
        </div>
    </div>
</div>