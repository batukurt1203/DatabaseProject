@model DatabaseProject.Models.CustomerInformationViewModel
@{
    ViewData["Title"] = "Customer Information";
    Layout = "_customerNavBar";
}

<div class="fixed-background"></div>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="glass-card p-5 w-100" style="max-width: 600px;">
        <div class="text-center mb-4">
            <div class="avatar-circle mb-3">
                <span>@Model.FullName.Substring(0, 1)</span> </div>
            <h2 class="mb-1">@Model.FullName</h2>
            <p class="text-warning">@Model.CompanyName</p>
        </div>

        <div class="info-grid">
            <div class="info-item">
                <label>Email Adresi</label>
                <div class="info-value">@Model.Email</div>
            </div>
            <div class="info-item">
                <label>Kayıt Tarihi</label>
                <div class="info-value">@Model.HireDate.ToShortDateString()</div>
            </div>
        </div>

        <div class="text-center mt-5">
            <a asp-controller="Customer" asp-action="CustomerDashboard" class="btn btn-outline-light px-4">← Panele Dön</a>
        </div>
    </div>
</div>

<style>
    /* Önceki sayfadaki .fixed-background ve .glass-card stilleri burada da geçerli olmalı. 
       Eğer _Layout'a koymadıysan buraya da eklemelisin. Ben ekstra stilleri yazıyorum: */
    
    .fixed-background {
        position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1;
        background: linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.9)), url('https://images.unsplash.com/photo-1497366216548-37526070297c?auto=format&fit=crop&w=1950&q=80');
        background-size: cover;
    }
    
    .glass-card {
        background: rgba(255, 255, 255, 0.05); backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 15px; color: white;
    }

    .avatar-circle {
        width: 80px; height: 80px; background: linear-gradient(45deg, #ffc107, #ff6b6b);
        border-radius: 50%; margin: 0 auto; display: flex; align-items: center; justify-content: center;
        font-size: 2rem; font-weight: bold; color: #fff;
        box-shadow: 0 4px 15px rgba(255, 193, 7, 0.4);
    }

    .info-item {
        background: rgba(0,0,0,0.3); padding: 15px; border-radius: 10px; margin-bottom: 10px;
        border-left: 3px solid #ffc107;
    }

    .info-item label {
        font-size: 0.8rem; color: #aaa; display: block; margin-bottom: 3px;
    }
    
    .info-value {
        font-size: 1.1rem; font-weight: 500;
    }
</style>